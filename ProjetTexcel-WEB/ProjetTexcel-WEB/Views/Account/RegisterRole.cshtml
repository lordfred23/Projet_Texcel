@model ProjetTexcel_WEB.Models.RegisterViewModel
@{
    ViewBag.Title = "Enregistrer le role";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post,new { @class = "form-horizontal",role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Créer un nouveau compte</h4>
    <hr />
    @Html.ValidationSummary("", new { @class="text-danger"})
    <div class="form-group">
        @Html.Label("Sélectionner le role",new { @class="col-md-2 control-label"})
        <div class="col-md-10">
            @Html.DropDownList("UserName")
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Sélectionner l'utilisateur", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("Name")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="S'inscrire" />
        </div>
    </div>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")    
}

