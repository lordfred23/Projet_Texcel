@model IEnumerable<ProjetTexcel_WEB.tblJeu>

@{
    ViewBag.Title = "Jeux";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Développeur
        </th>
        <th>
            Description
        </th>
        <th>
            Configuration Minimal
        </th>
        <th>
            Nom
        </th>
        
        <th>
            Classification
        </th>
        <th>
            Genre
        </th>
        <th>
            Platforme
        </th>
        <th>
            Thème
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.developpeur)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.minimalConfig)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nom)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.tblClassification.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblGenre.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblPlatform.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblTheme.nom)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idJeu }) |
            @Html.ActionLink("Details", "Details", new { id=item.idJeu }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idJeu })
        </td>
    </tr>
}

</table>
