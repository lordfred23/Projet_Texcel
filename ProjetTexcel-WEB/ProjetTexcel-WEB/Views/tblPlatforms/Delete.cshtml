@model ProjetTexcel_WEB.tblPlatform

@{
    ViewBag.Title = "Supprimer";
}

<h2>Supprimer</h2>

<h3>Êtes-vous sur de vouloir supprimer cette platforme ?</h3>
<div>
    <h4>Platform</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           nom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom)
        </dd>

        <dt>
            Configuration minimal
        </dt>

        <dd>
            @Html.DisplayFor(model => model.config)
        </dd>

        <dt>
            Type de Platformes
        </dt>

        <dd>
            @Html.DisplayFor(model => model.typePlatform)
        </dd>

         <dt>
            Système d'exploitation
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblSystemExploitation.nom)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Retour", "Index")
        </div>
    }
</div>
