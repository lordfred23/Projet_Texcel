@model IEnumerable<ProjetTexcel_WEB.tblClassification>

@{
    ViewBag.Title = "Classifications";
}

<h2>@ViewBag.Title</h2>
<div>
    <p class="floatP">
        @Html.ActionLink("Ajouter", "Create")
    </p>
    <form class="searchBar">
        <input type="text" placeholder="Search..." required>
        <input type="button" value="Search">
    </form>
</div>
<table class="table">
    <tr>
        <th>
           Nom
        </th>
        <th>
            Description
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        
        <td>
            @Html.ActionLink("Éditer", "Edit", new { id=item.idClassification }) |
            @Html.ActionLink("Détails", "Details", new { id=item.idClassification }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.idClassification })
        </td>
    </tr>
}

</table>
