@model IEnumerable<ProjetTexcel_WEB.tblClassification>

@{
    ViewBag.Title = "Classifications";
}


<h2>@ViewBag.Title</h2>


 <p>
    @Html.ActionLink("Ajouter", "Create")
</p>

<div class="formContainer">
    
   
 @using (Html.BeginForm("Index", "tblClassifications", FormMethod.Post))
 {
     @Html.TextBox("search")
    <input type="submit" value="Search" />
 }

    <table class="table">
        <tr>
            <th>
                Nom
            </th>
            <th>
                Description
            </th>
            <th></th>
            </tr>


@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        
        <td>
            @Html.ActionLink("Éditer", "Edit", new { id = item.idClassification }) |
            @Html.ActionLink("Détails", "Details", new { id = item.idClassification }) |
            @Html.ActionLink("Supprimer", "Delete", new { id = item.idClassification })
        </td>
    </tr>
}


        
    </table>
</div>

