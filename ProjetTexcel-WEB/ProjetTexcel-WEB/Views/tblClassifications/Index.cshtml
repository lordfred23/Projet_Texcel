@model IEnumerable<ProjetTexcel_WEB.tblClassification>

@{
    ViewBag.Title = "Classifications";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Nom
        </th>
        <th>
            Description
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idClassification }) |
            @Html.ActionLink("Details", "Details", new { id=item.idClassification }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idClassification })
        </td>
    </tr>
}

</table>
